@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<script>
    jQuery.extend(jQuery.validator.messages, {
        required: '@Localizer["Required"]',
        remote: '@Localizer["Please fix this field"]',
        email: '@Localizer["Please enter a valid email address"]',
        url: '@Localizer["Please enter a valid URL"]',
        date: '@Localizer["Please enter a valid date"]',
        dateISO: '@Localizer["Please enter a valid date (ISO)"]',
        number: '@Localizer["Please enter a valid number"]',
        digits: '@Localizer["Please enter only digits"]',
        creditcard: '@Localizer["Please enter a valid credit card number"]',
        equalTo: '@Localizer["Please enter the same value again"]',
        accept: '@Localizer["Please enter a value with a valid extension"]',
        maxlength: jQuery.validator.format('@Localizer["Please enter no more than {0} characters", "{0}"]'),
        minlength: jQuery.validator.format('@Localizer["Please enter at least {0} characters", "{0}"]'),
        rangelength: jQuery.validator.format('@Localizer["Please enter a value between {0} and {1} characters long", "{0}", "{1}"]'),
        range: jQuery.validator.format('@Localizer["Please enter a value between {0} and {1}", "{0}", "{1}"]'),
        max: jQuery.validator.format('@Localizer["Please enter a value less than or equal to {0}", "{0}"]'),
        min: jQuery.validator.format('@Localizer["Please enter a value greater than or equal to {0}", "{0}"]')
    });
    DataTableLangLookup = {
        "emptyTable": '@Localizer["No data available in table"]',
        "info": '@Localizer["Showing _START_ to _END_ of _TOTAL_ entries"]',
        "infoEmpty": '@Localizer["Showing 0 to 0 of 0 entries"]',
        "infoFiltered": '@Localizer["(filtered from _MAX_ total entries)"]',
        "lengthMenu": '@Localizer["Show _MENU_ entries"]',
        "loadingRecords": '@Localizer["Loading..."]',
        "processing": '@Localizer["Processing..."]',
        "search": '@Localizer["Search:"]',
        "zeroRecords": '@Localizer["No matching records found"]',
        "paginate": {
            "first": '@Localizer["First"]',
            "last": '@Localizer["Last"]',
            "next": '@Localizer["Next"]',
            "previous": '@Localizer["Previous"]'
        },
    };
</script>